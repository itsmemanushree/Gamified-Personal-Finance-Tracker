<section class="hero is-link is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-5-tablet is-4-desktop is-3-widescreen">
            <h3 class="title has-text-white has-text-centered">Sign Up</h3>
            <hr class="signup-hr">
            <p class="subtitle has-text-white has-text-centered">Please Sign Up to track your expense!</p>
          <form action="" class="box signup-form">
            <div class="field">
              <label for="" class="label">Name</label>
              <div class="control has-icons-left">
                <input id="name-signup" type="text" class="input" required>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <label for="" class="label">Email</label>
              <div class="control has-icons-left">
                <input id="email-signup" type="email" placeholder="e.g. bro@gmail.com" class="input" required>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <label for="" class="label">Password</label>
              <div class="control has-icons-left">
                <input id="password-signup" type="password" placeholder="**Min 8 Chars**" class="input" required>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>
        
            <div class="field">
              <button class="button is-success" id="signUpBtn">
                Sign Up
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="/js/signUp.js"></script>